{
    "comments": {
        "lineComment": "//",
        "blockComment": [
            "/*",
            "*/"
        ]
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "[",
            "close": "]",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "(",
            "close": ")",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "/*",
            "close": "*/",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "`",
            "close": "`",
            "notIn": [
                "string",
                "comment"
            ]
        }
    ],
    "folding": {
        "offSide": true,
        "markers": {
            "start": "^\\s*#\\s*region\\b",
            "end": "^\\s*#\\s*endregion\\b"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\s*.*(:|-) ?(&amp;\\w+)?(\\{[^}\"']*|\\([^)\"']*)?$",
        "decreaseIndentPattern": "^\\s+\\}$"
    },
    "wordPattern": "\\w+"
}